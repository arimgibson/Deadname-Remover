{
  "name": "deadname-remover",
  "version": "2.0.0",
  "description": "An easy to use browser plugin to automatically remove and replace deadnames",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "node esbuild.mjs",
    "build:dev": "node esbuild.mjs --dev",
    "build:dev:watch": "node esbuild.mjs --dev --watch",
    "build:prod": "node esbuild.mjs --prod",
    "dev": "concurrently \"pnpm build:dev:watch\" \"web-ext run --source-dir ./dist/ --target chromium\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arimgibson/Deadname-Remover.git"
  },
  "keywords": [
    "trans",
    "transgender",
    "dead",
    "name",
    "deadname",
    "lgbtq",
    "lgbtq+",
    "queer",
    "non-binary",
    "gender"
  ],
  "author": "Willow Hayward & Ari Gibson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arimgibson/Deadname-Remover/issues"
  },
  "homepage": "https://github.com/arimgibson/Deadname-Remover#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.190",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chalk": "^5.1.2",
    "cypress": "^10.11.0",
    "esbuild": "^0.14.54",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "fs-extra": "^10.1.0",
    "typescript": "^4.9.3",
    "web-ext": "^7.3.1"
  }
}
