{
  "include": ["src/**/*.ts", "esbuild.mjs", "tasks/*.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "ESNext",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "lib": ["ES2019", "DOM", "dom.iterable"],
    "downlevelIteration": true,
    "noEmit": true,
    "incremental": true,
    "sourceMap": true
  },
  "types": ["chrome", "cypress"]
}
